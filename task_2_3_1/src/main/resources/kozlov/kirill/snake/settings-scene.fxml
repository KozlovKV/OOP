<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.scene.control.IntegerField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="kozlov.kirill.snake.view_model.settings.SettingsViewModel">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label>Width:</Label>
    <TextField fx:id="widthField" />
    <Label>Height:</Label>
    <TextField fx:id="heightField" />
    <Label>Apples count:</Label>
    <TextField fx:id="applesCountField" />
    <Button text="Save and exit" onAction="#save"/>
    <Button text="Discard" onAction="#discard"/>
</VBox>
