<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.scene.control.IntegerField?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="kozlov.kirill.snake.viewmodel.settings.SettingsViewModel">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <Label text="Chaotic enemies count: " />
            <TextField fx:id="randomsCountField" />
        </HBox>
        <Label fx:id="randomsCountError"/>
    </VBox>
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <Label text="Predators count: " />
            <TextField fx:id="predatorsCountField" />
        </HBox>
        <Label fx:id="predatorsCountError"/>
    </VBox>
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <Label text="Apples count: " />
            <TextField fx:id="applesCountField" />
        </HBox>
        <Label fx:id="applesCountError"/>
    </VBox>
    <Button text="Save and exit" onAction="#save"/>
    <Button text="Discard" onAction="#discard"/>
</VBox>
